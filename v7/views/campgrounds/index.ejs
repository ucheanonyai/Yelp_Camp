<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to Yelp Camp!</h1>
            <p>View our hand picked camp grounds</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add new campground</a>
            </p>
        </div>
        
    </header>

    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
         
         <!--<div class="col-lg-12">-->
            <% campgrounds.forEach(function(campgrounds){ %>
             <div class="col-lg-4 col-md-6 col-sm-12">
                <div class="thumbnail">
                    <img src="<%= campgrounds.image %>">
                    <div class="caption">
                     <h4><%= campgrounds.name %></h4>
               </div>
               <p>
                   <a href="/campgrounds/<%= campgrounds._id %>" class="btn btn-primary">More Info</a>
               </p>
                </div>
            </div>
            <% }); %>
         <!--</div>-->
            
          
        
    </div>
   

   
</div>

<% include ../partials/footer %>